{
  "name": "kana-monorepo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "npm@10.9.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "turbo run test",
    "check": "turbo run check"
  },
  "prettier": "prettier-config",
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-config": "github:boyum/prettier-config",
    "turbo": "^2.6.0"
  }
}
